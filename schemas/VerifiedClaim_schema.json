{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arklinux.local/schemas/VerifiedClaim_schema.json",
  "title": "VerifiedClaim Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "vc_version",
    "claim_id",
    "statement",
    "evidence_refs",
    "source_diversity",
    "confidence_score",
    "variance_summary",
    "resolution_steps",
    "created_at",
    "signature"
  ],
  "properties": {
    "vc_version": { "type": "string", "pattern": "^v\\d+\\.\\d+(?:\\.\\d+)?$" },
    "claim_id": { "type": "string", "minLength": 8 },
    "statement": { "type": "string", "minLength": 1 },
    "evidence_refs": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/evidence_ref" }
    },
    "source_diversity": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source_count","independence_notes"],
      "properties": {
        "source_count": { "type": "integer", "minimum": 0 },
        "independence_notes": { "type": "string" }
      }
    },
    "confidence_score": { "type": "number", "minimum": 0, "maximum": 1 },
    "variance_summary": { "type": "string" },
    "resolution_steps": { "type": "array", "items": { "type": "string" } },
    "created_at": { "type": "string", "format": "date-time" },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": ["alg","public_key_id","sig"],
      "properties": {
        "alg": { "type": "string", "enum": ["Ed25519"] },
        "public_key_id": { "type": "string", "minLength": 8 },
        "sig": { "type": "string", "pattern": "^[A-Za-z0-9+/=]{44,}$" }
      }
    }
  },
  "$defs": {
    "evidence_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source","uri","hash"],
      "properties": {
        "source": { "type": "string", "minLength": 1 },
        "uri": { "type": "string", "minLength": 1 },
        "hash": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$" },
        "retrieved_at": { "type": "string", "format": "date-time" }
      }
    }
  }
}
